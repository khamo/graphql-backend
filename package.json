{
  "name": "graphql-backend",
  "version": "0.0.1-alpha.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "dev": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "build": "rimraf dist && tsc",
    "test": "NODE_ENV=test dotenv -- jest",
    "pretty": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -p tsconfig.json -c tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix \"src/**/*.{ts,tsx}\"",
    "codegen": "yarn prisma generate && yarn gg",
    "heroku-postbuild": "yarn run build"
  },
  "codegen": {
    "src/generated/**/*.{ts,tsx}": [
      "yarn codegen",
      "git add"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "yarn pretty",
      "yarn lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarn install"
    }
  },
  "dependencies": {
    "apollo-engine": "^1.1.2",
    "bcryptjs": "2.4.3",
    "graphql-yoga": "1.17.4",
    "inflection": "^1.12.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "8.4.0",
    "prisma-client-lib": "^1.26.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/inflection": "^1.5.28",
    "@types/jest": "^24.0.6",
    "@types/joi": "^14.3.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^11.9.4",
    "apollo": "^2.5.1",
    "dotenv-cli": "1.4.0",
    "graphql-request": "^1.8.2",
    "graphqlgen": "^0.6.0-rc8",
    "husky": "^1.3.1",
    "jest": "^23.0.0",
    "lint-staged": "^8.1.4",
    "nodemon": "1.18.10",
    "prettier": "^1.16.4",
    "prisma": "1.26.6",
    "rimraf": "2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "3.3.3"
  },
  "heroku-run-build-script": true
}
