type Person {
    id: ID! @unique
    email: String! @unique
    createdAt: DateTime!
    password: String!
    name: String!
    confirmationCode: String
    emailConfirmed: Boolean!
    groups: [Group!]
}

type Group {
    id: ID! @unique
    name: String! @unique
    createdAt: DateTime!
    description: String
    members: [Person!]
    threads: [Thread!]
}

type Thread {
    id: ID! @unique
    createdAt: DateTime!
    title: String!
    posts: [Post!]!
    group: Group!
    pinned: Boolean!
}

type Post {
    id: ID! @unique
    createdAt: DateTime!
    author: Person!
    content: String!
    thread: Thread!
}
