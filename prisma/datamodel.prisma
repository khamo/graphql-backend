type Person {
    id: ID! @unique
    email: String! @unique
    createdAt: DateTime!
    password: String!
    name: String!
    groups: [Group!]
}

type Group {
    id: ID! @unique
    name: String! @unique
    createdAt: DateTime!
    description: String
    members: [Person!]
    threads: [Thread!]
}

type Thread {
    id: ID! @unique
    createdAt: DateTime!
    title: String!
    posts: [Post!]!
    group: Group!
}

type Post {
    id: ID! @unique
    createdAt: DateTime!
    author: Person!
    content: String!
    thread: Thread!
}

type WikiPage {
    id: ID! @unique
    createdAt: DateTime!
    content: [WikiPageContent!]
    group: Group!
}

type WikiPageContent {
    id: ID! @unique
    createdAt: DateTime!
    page: WikiPage!
    title: String!
    content: String!
    author: Person!
    deleted: Boolean!
}
