type Person {
    id: ID! @unique
    email: String! @unique
    createdAt: DateTime!
    password: String!
    name: String!
    confirmationCode: String
    emailConfirmed: Boolean!
    passwordResetCode: String
    passwordResetAttempts: Int!
    lastPasswordResetAttempt: DateTime!
    passwordAttempts: Int!
    lastPasswordAttempt: DateTime!
    confirmationAttempts: Int!
    lastConfirmationAttempt: DateTime!
    authLockedUntil: DateTime!
    groups: [Group!]
}

type Group {
    id: ID! @unique
    name: String! @unique
    createdAt: DateTime!
    description: String
    members: [Person!]
    threads: [Thread!]
}

type Thread {
    id: ID! @unique
    createdAt: DateTime!
    title: String!
    posts: [Post!]!
    group: Group!
    pinned: Boolean!
}

type Post {
    id: ID! @unique
    createdAt: DateTime!
    author: Person!
    content: String!
    thread: Thread!
    firstPost: Boolean!  # used by subscriptions to distinguish new threads from new posts
}
